@model IEnumerable<CrmWebApp.Models.SalesServeArea>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="#" class="btn btn-default" data-toggle="modal" data-target="#cityListModalDiv" onclick="ShowCityList('@ViewBag.UserName')">编辑</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Province)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Province)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<div class="modal" id="cityListModalDiv" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title">city list</h3>
            </div>
            <div class="modal-body" id="cityListModalBodyDiv">

            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-default" data-dismiss="modal">关闭</a>
            </div>
        </div>
    </div>
</div>

<script>   

    var ShowCityList = function (userName) {
        var serverUrl = "@Url.Content("~/")";
        var url = serverUrl + "SelectCityView/EditSalesServeAreaCitys?userName=" + userName;
        $("#cityListModalBodyDiv").load(url, function () {
            $("#cityListModalDiv").modal("show");
        })
    }
</script>
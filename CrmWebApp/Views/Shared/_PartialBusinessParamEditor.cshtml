@model CrmWebApp.Models.CompanyBusinessDailyParam
@using (Html.BeginForm("AddBusinessDailyParam", "CompanyBusinessDailies", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.CompanyBusinessDailyId)
    @Html.HiddenFor(m => m.ParamName)
    @Html.DisplayFor(m => m.ParamName)
    <hr />
    <div class="col-md-3">
        @Html.EditorFor(m => m.SubParamItem, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="col-md-3">
        @Html.EditorFor(m => m.ItemAmount, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <input type="submit" value="Save" class="btn btn-default" />
}
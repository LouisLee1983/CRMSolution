@model CrmWebApp.Models.OtaSalesReport

@{
    ViewBag.Title = "Create";
}

<div class="row-fluid">
    <div class="span12">
        <ul class="breadcrumb">
            <li>
                <a href="~/Home/Index">主页</a> <span class="divider"></span>
            </li>
            <li>
                <a href="~/OtaSalesReports/Index">周报</a> <span class="divider"></span>

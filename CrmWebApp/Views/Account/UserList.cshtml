@model IEnumerable<CrmWebApp.Models.EditUserViewModel>

@{
    ViewBag.Title = "账号管理";
}

<h2>UserList</h2>

<p>
    @Html.ActionLink("新增账号", "Register")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrueName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QQ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServeAreaName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrueName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QQ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServeAreaName)
            </td>
            <td>
                @Html.ActionLink("编辑", "EditUser", new { id = item.UserName },new {@class="btn btn-default" })
                @Html.ActionLink("角色", "EditUserRoles", new { id = item.UserName }, new { @class = "btn btn-default" })
                @Html.ActionLink("删除", "DeleteUser", new { id = item.UserName }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }

</table>
